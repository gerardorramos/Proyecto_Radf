<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyPRAD.Views.PageUpdContact">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="10,0,10,0"  BackgroundColor="AliceBlue">
            
            <Image x:Name="Foto" BackgroundColor="Wheat"
                       WidthRequest="100" HeightRequest="200"
                       Margin="10,5,10,5"/>


            <Button x:Name="btnfoto" Text="Tomar Foto"
                        Clicked="btnfoto_Clicked" 
                        VerticalOptions="Center"
                        BackgroundColor="green"
                        BorderColor="Black"
                        Margin="60,5,60,10"/>
            
            <Label Text="Id"
                   HorizontalOptions="Start"
                   FontSize="20"
                   TextColor="Black"
                   Margin="10,5,10,5"/>
                
            <Entry Keyboard="Numeric"
                   Placeholder="Codigo"
                   TextColor="Black"
                   Margin="10,5,10,5"
                   BackgroundColor="Wheat"
                   WidthRequest="0" HeightRequest="50"
                   IsSpellCheckEnabled="True"
                   IsTextPredictionEnabled="True"
                   MaxLength="10"
                       x:Name="Id"/>

            <Label Text="Nombres"
                   HorizontalOptions="Start"
                   FontSize="20"
                   TextColor="Black"
                   Margin="10,5,10,5"/>

            <Entry Keyboard="Text"
                    TextColor="Black"
                    Placeholder="nombres"
                    Margin="10,5,10,5"
                   BackgroundColor="Wheat"
                   WidthRequest="0" HeightRequest="50"
                   IsSpellCheckEnabled="True"
                   IsTextPredictionEnabled="True"
                   MaxLength="10"
                   x:Name="nombres"
                   />

            <Label Text="Apellidos"
                   HorizontalOptions="Start"
                   FontSize="20"
                   TextColor="Black"
                   Margin="10,5,10,5"/>

            <Entry Keyboard="Text"
                    TextColor="Black"
                    Placeholder="apellidos"
                    Margin="10,5,10,5"
                   BackgroundColor="Wheat"
                   WidthRequest="0" HeightRequest="50"
                   IsSpellCheckEnabled="True"
                   IsTextPredictionEnabled="True"
                   MaxLength="10"
                   x:Name="apellidos"
                   />

            <Label Text="Telefono"
                    FontSize="20"
                   TextColor="Black"
                   Margin="10,5,10,5"
                      />
            <Entry Keyboard="Numeric"
                    TextColor="Black"
                    Margin="10,5,10,5"
                    BackgroundColor="Wheat"
                   Placeholder="Telefono"
                   x:Name="telefono"/>



            <Label Text="Edad"
                    FontSize="20"
                   HorizontalOptions="Start"
                   TextColor="Black"
                   Margin="10,5,10,5"/>
            
            <Entry Keyboard="Numeric"
                    TextColor="Black"
             Placeholder="Edad"
                    Margin="10,5,10,5"
                    BackgroundColor="Wheat"
                   x:Name="edad"/>

            <Picker Title="Pais" x:Name="pais"
                    TitleColor="Black"
                     BackgroundColor="Wheat"
                     FontSize="20"
                    Margin="10,5,10,5">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Honduras (504)</x:String>
                        <x:String>Costa Rica(506)</x:String>
                        <x:String>Guatemala(502)</x:String>
                        <x:String>El salvador(503)</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Label Text="Nota"
                    FontSize="20"
                   TextColor="Black"
                   Margin="10,5,10,5"/>
            
            <Entry Keyboard="Text"
                   TextColor="Black"
                   Margin="10,5,10,5"
                   BackgroundColor="Wheat"
                   x:Name="nota"/>

            <Button Text="Salvar Contacto"
                    TextColor="FloralWhite"
                    BackgroundColor="Green"
                    BorderColor="Black"
                    BorderWidth="3"
                    BorderRadius="2"
                    Margin="5,5,5,5"
                    CornerRadius="1"
                    WidthRequest="0"
                    HeightRequest="60"
                    x:Name="btSalvar"
                    VerticalOptions="Center"
                    Clicked="btSalvar_Clicked"/>
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>